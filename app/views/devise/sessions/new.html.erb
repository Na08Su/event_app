<div class="row">
  <div class="col m6 offset-m3 center">

    <h2>ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render 'layouts/deviseannounce' %>

      <div class="input-field">
        <%= f.email_field :email, class: "validate", placeholder: "Eメール" %>
      </div>

      <div class="input-field">
        <%= f.password_field :password, class: "validate", placeholder: "password", autocomplete: "off" %>
      </div>

      <button class="btn waves-effect waves-light" type="submit" name="action">ログイン</button>
      <%= link_to "パスワードを忘れた？", new_user_password_path, class: "btn waves-effect waves-light" %>
    <% end %>

  </div>
</div>

